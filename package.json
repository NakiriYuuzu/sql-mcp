{
    "name": "@yuuzu/sql-mcp",
    "version": "1.0.0",
    "description": "MCP server for MSSQL and PostgreSQL database operations",
    "type": "module",
    "main": "dist/index.js",
    "bin": {
        "sql-mcp": "./dist/index.js"
    },
    "files": [
        "dist"
    ],
    "scripts": {
        "dev": "bun run src/index.ts",
        "build": "bun build src/index.ts --outdir dist --target node --format esm",
        "test": "bun test",
        "test:coverage": "bun test --coverage",
        "typecheck": "tsc --noEmit",
        "prepublishOnly": "bun run build"
    },
    "dependencies": {
        "@modelcontextprotocol/sdk": "^1.25.2",
        "mssql": "^12.2.0",
        "pg": "^8.17.0",
        "zod": "^3.25.76"
    },
    "devDependencies": {
        "@types/bun": "latest",
        "@types/mssql": "^9.1.8",
        "@types/pg": "^8.16.0",
        "typescript": "^5.9.3"
    },
    "engines": {
        "node": ">=18.0.0"
    },
    "publishConfig": {
        "access": "public"
    },
    "keywords": [
        "mcp",
        "model-context-protocol",
        "database",
        "mssql",
        "postgresql",
        "sql"
    ],
    "author": "yuuzu",
    "license": "MIT"
}
